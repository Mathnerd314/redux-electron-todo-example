{
  // Documentation: https://github.com/beautify-web/js-beautify/
  // (many options only documented in code)
  "end_with_newline": true,
  "indent_size": 2,
  "wrap_line_length": 0, // disables
  "max_preserve_newlines": 2,
  "html": {
    "allowed_file_extensions": ["htm", "html", "xhtml", "shtml", "xml", "svg"]
  },
  "css": {
    "allowed_file_extensions": ["css", "scss", "sass", "less"]
  },
  "js": {
    "allowed_file_extensions": ["js", "json", "jshintrc", "jsbeautifyrc", "eslintrc", "babelrc"],
    "brace_style": "collapse,preserve-inline",
    "e4x": true // Pass E4X xml literals through untouched
  }
}
